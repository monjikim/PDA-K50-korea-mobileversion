<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    >

    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <FrameLayout
            android:visibility="visible"
            android:background="#000000"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.camera.view.PreviewView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/previewview">

            </androidx.camera.view.PreviewView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/background_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/background_image" />
            </RelativeLayout>
        </FrameLayout>
<!--        <me.dm7.barcodescanner.zxing.ZXingScannerView-->
<!--            android:layout_weight="1"-->
<!--            android:visibility="invisible"-->
<!--            android:padding="5dp"-->
<!--            android:id="@+id/barcode_scanner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:gravity="center">-->
<!--        </me.dm7.barcodescanner.zxing.ZXingScannerView>-->
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/tv_count"
            android:textSize="25sp"
            android:layout_weight="5"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="16sp"
                android:text="&#9632;"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=" Date "
                android:gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=": "
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_date"
                android:textSize="18sp"
                android:text="1234"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="16sp"
                android:text="&#9632;"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=" C/T_no "
                android:gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=": "
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:inputType="text"
                android:singleLine="true"
                android:nextFocusForward="@id/seal_no"
                android:imeOptions="actionNext"
                android:id="@+id/container_no"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="16sp"
                android:text="&#9632;"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=" C/T_Seal "
                android:gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=": "
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:singleLine="true"
                android:nextFocusForward="@id/tv_serial_no"
                android:imeOptions="actionNext"
                android:id="@+id/seal_no"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="16sp"
                android:text="&#9632;"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=" Order_no "
                android:gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=": "
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_order_no"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="16sp"
                android:text="&#9632;"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=" Case_no "
                android:gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=": "
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_case_no"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="16sp"
                android:text="&#9632;"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=" Serial_no "
                android:gravity="center_vertical"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text=": "
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_serial_no"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_cound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:textSize="15sp"
                android:id="@+id/EditTextReception"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:gravity="top"
                android:hint="결과 창"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"></EditText>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_gravity="right"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="DuplicateIds">

        <ToggleButton
            android:checked="false"
            android:id="@+id/button_repeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:textOff="@string/but_repeat"
            android:textOn="@string/but_stop" />

        <ToggleButton
            android:checked="false"
            android:id="@+id/button_single"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:textOff="수동\n시작"
            android:textOn="수동\n중지" />

        <Button
            android:visibility="gone"
            android:id="@+id/buttonscan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/but_start" />

        <ToggleButton
            android:visibility="gone"
            android:id="@+id/butSound"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:textOff="Sound OFF"
            android:textOn="Sound ON" />

        <ToggleButton
            android:visibility="gone"
            android:id="@+id/butVibrate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:textOff="Vibrate OFF"
            android:textOn="Vibrate ON" />

        <Button
            android:id="@+id/buttonclear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/but_clear" />
        <Button
            android:id="@+id/button_undo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_undo" />
        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_send" />

    </LinearLayout>
</LinearLayout>
