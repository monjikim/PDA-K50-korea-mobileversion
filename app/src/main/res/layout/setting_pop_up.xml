<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlPopupSetupPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:background="#99000000"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rlPopupArea"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="0dp"
            android:background="#99000000"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rlPopupTopArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="#222222">

                <RelativeLayout
                    android:id="@+id/rlTitleArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/tvPopupTit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:text="Setting"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPopupContentArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlPopupTopArea"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp">

                <RelativeLayout
                    android:id="@+id/rlPopupContentLeftArea"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:background="#e8e8e8">
                    <LinearLayout
                        android:id="@+id/ipaddressll"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:text="IP Address : "
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/ipaddressll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:textColor="@color/black"
                            android:backgroundTint="@color/black"
                            android:inputType="number"
                            android:maxLength="3"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:textSize="15dp"
                            android:id="@+id/ipAddress_et1"
                            android:layout_width="60dp"
                            android:nextFocusDown="@id/ipAddress_et2"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:hint="" />
                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:text="."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:textColor="@color/black"
                            android:backgroundTint="@color/black"
                            android:inputType="number"
                            android:maxLength="3"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:textSize="15dp"
                            android:id="@+id/ipAddress_et2"
                            android:nextFocusDown="@id/ipAddress_et3"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:hint="" />
                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:text="."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:textColor="@color/black"
                            android:backgroundTint="@color/black"
                            android:inputType="number"
                            android:maxLength="3"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:textSize="15dp"
                            android:id="@+id/ipAddress_et3"
                            android:nextFocusDown="@id/ipAddress_et4"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:hint="" />
                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:text="."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:textColor="@color/black"
                            android:backgroundTint="@color/black"
                            android:inputType="number"
                            android:maxLength="3"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:textSize="15dp"
                            android:id="@+id/ipAddress_et4"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:hint="" />
                    </LinearLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:background="#222222"
                    android:id="@+id/rlPopupContentBottomArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rlPopupContentLeftArea"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp">

                    <Button
                        android:id="@+id/btn_setting_save"
                        android:layout_marginLeft="30dp"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="#000000"
                        android:text="save"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/btn_setting_cancel"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@+id/btn_setting_save"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="#000000"
                        android:text="cancel"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
</merge>